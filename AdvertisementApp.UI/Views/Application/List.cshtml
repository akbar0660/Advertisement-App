@model List<AdvertisementListDto>

<div class="container-fluid">
    @if (Model?.Count > 0)
    {
        <div class="text-end my-3 p-1">
            <a asp-action="Create" asp-controller="Application" class="btn btn-primary">Create new advertisement</a>
        </div>
        <table class=" mt-3 table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                        <td>@(item.Status?"Active":"Passive")</td>
                        <td>
                            <a class="btn btn-info" asp-action="Update" asp-controller="Application" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-warning" asp-action="Remove" asp-controller="Application" asp-route-id="@item.Id">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-end my-3 p-1">
            <a asp-action="Create" asp-controller="Application" class="btn btn-primary">Create new advertisement</a>
        </div>
        <div class="mt-3 text-bg-danger-center lead">
            There is no Job Advertisement.
        </div>
    }
</div>
